<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'shared/form', user: @user, book: @book_render %>
    </div>
    <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td><%= link_to user_path(@book.user_id) do %>
            <%= attachment_image_tag  @book.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg",size:'40x40' %><br><%= @book.user.name%><% end %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><span class="btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book) %></td></span>
          <td><span class="btn-sm btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"}  %></td></span>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>
