<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header class="navbar navbar-fixed-top navbar-inverse" style="margin-bottom: 20px;">
  <div class="container">
    
      <nav class="nav navbar-nav navbar-left" style="color: white; font-size: 20px;">
        <span style="padding-top: 10px">Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li> <%= link_to user_path(current_user) do %><i class="glyphicon glyphicon-home home"></i>&emsp;Home<% end %></li>
            <li> <%= link_to users_path do %><i class="glyphicon glyphicon-user users"></i>&emsp;Users<% end %></li>
            <li> <%= link_to books_path do %><i class="glyphicon glyphicon-book books"></i>&emsp;Books<% end %> </li>
            <li> <%= link_to destroy_user_session_path, method: :delete do %><i class="glyphicon glyphicon-log-out logout"></i>&emsp;logout<% end %></li>
          <% else %>
            <li><%= link_to root_path do %><i class="glyphicon glyphicon-home home"></i>&emsp;Home<% end %></li>
            <li><%= link_to "/home/about" do %><i class="glyphicon glyphicon-link about"></i>&emsp;About<% end %></li>
            <li><%= link_to new_user_registration_path do %><i class="glyphicon glyphicon-edit sign_up"></i>&emsp;sign up<% end %></li>
            <li><%= link_to new_user_session_path do %><i class="glyphicon glyphicon-log-in sign_in"></i>&emsp;login<% end %></li>
          <% end %>
        </ul>
      </nav>
  </div>
</header>

  <div class="container" style="margin-top: 50px;">
    <div class="row">
      <div style="padding-top: 10px">
        <p><%= flash[:notice] %></p>
         <%= render 'layouts/notifications' %>
      </div>
        <%= yield %>
    </div>
  </div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

  </body>
</html>
